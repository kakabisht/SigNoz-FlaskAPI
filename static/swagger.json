{
    "swagger": "2.0",
    "info": {
      "title": "Coffee Shop API",
      "description": "A simple CRUD API for managing coffee items",
      "version": "1.0.0"
    },
    "host": "127.0.0.1:5000",
    "schemes": ["http"],
    "paths": {
      "/coffees": {
        "get": {
          "summary": "Get all coffees",
          "responses": {
            "200": {
              "description": "A list of coffees"
            }
          }
        },
        "post": {
          "summary": "Add a new coffee",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "number" }
                }
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Coffee created"
            }
          }
        }
      },
      "/coffees/{coffee_id}": {
        "get": {
          "summary": "Get coffee by ID",
          "parameters": [
            {
              "name": "coffee_id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": { "description": "Coffee found" },
            "404": { "description": "Coffee not found" }
          }
        },
        "put": {
          "summary": "Update coffee by ID",
          "parameters": [
            {
              "name": "coffee_id",
              "in": "path",
              "required": true,
              "type": "integer"
            },
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "number" }
                }
              }
            }
          ],
          "responses": {
            "200": { "description": "Coffee updated" },
            "404": { "description": "Coffee not found" }
          }
        },
        "delete": {
          "summary": "Delete coffee by ID",
          "parameters": [
            {
              "name": "coffee_id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": { "description": "Coffee deleted" },
            "404": { "description": "Coffee not found" }
          }
        }
      }
    }
  }
  